.skeleton {

}

.skeleton__item {
  position: absolute;
}
.skeleton__item_bg {
  background-color: #f6f6f6;
  border-radius: 12rpx;
}
.skeleton__item_rect {
  background-color: #f2f2f2;
  border-radius: 12rpx;
}
.skeleton__item_circle {
  background-color: #f2f2f2;
  border-radius: 200rpx;
}

.skeleton__render-button {
  position: fixed;
  z-index: 9999;
  right: 10rpx;
  bottom: 10rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  color: #fff;
  line-height: 90rpx;
  font-size: 24rpx;
  text-align: center;
  background-color: #ff613b;
  background-image: linear-gradient(135deg, #ff613b 0%, #d30500 100%);
  box-shadow: 0 4px 8px 0 rgba(240, 60, 39, 0.3);
}

.skeleton__spinbox{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
  z-index: 9999;
  display: none;
}
.skeleton__spin {
  display: inline-block;
  width: 64rpx;
  height: 64rpx;
}
.skeleton__spin:after {
  content: " ";
  display: block;
  width: 46rpx;
  height: 46rpx;
  margin: 1rpx;
  border-radius: 50%;
  border: 5rpx solid #409eff;
  border-color: #409eff transparent #409eff transparent;
  animation: spin 1.2s linear infinite;
}
@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes blink {
  0% {
    opacity: .9;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: .9;
  }
}

@keyframes flush {
  0% {
    left: -100%;
  }
  50% {
    left: 0;
  }
  100% {
    left: 100%;
  }
}
.skeleton__shine {
  animation: flush 2s linear infinite;
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  background: linear-gradient(to left,
  rgba(255, 255, 255, 0) 0%,
  rgba(255, 255, 255, .85) 50%,
  rgba(255, 255, 255, 0) 100%
  );
  display: none;
}
.skeleton_chiaroscuro .skeleton__item {
  animation-duration: 2s;
  animation-name: blink;
  animation-iteration-count: infinite;
}
.skeleton_shine .skeleton__shine, .skeleton_spin .skeleton__spin {
  display: block;
}
